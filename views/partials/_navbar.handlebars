					<span class="text-muted">Welcome {{#if authenticated}} {{user.username}}!{{/if}}</span>
					{{#if authenticated}} 
					<div>
						<a href="/logout">Logout</a>
					</div>
					{{else}}
					<div> 
						<a href="/login">Sign in</a> |  
						<a href="/register"> Register</a>
					</div>
					{{/if}}





				</div>
			</div>

		</div> <!-- widgets-wrap.// -->
	</div> <!-- col.// -->
</div> <!-- row.// -->
