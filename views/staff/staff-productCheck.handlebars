<style>
  a:link{ color: white; text-decoration: none;}
</style>

<div class="col-md-4">
		<figure class="card card-product-grid">
			<figcaption class="info-wrap">
				<div class="fix-height">
					<div class="price-wrap mt-2">
						<span class="price">Name: {{this.name}}</span>
					</div> 
                    <div class="price-wrap mt-2">
                        <div class="price-wrap mt-2">
						<span class="price">Product ID: {{this.productID}}</span>
					</div> 
						<span class="price">Description: {{this.description}}</span>
					</div> 
					<div class="price-wrap mt-2">
						<span class="price">Price: ${{this.price}}</span>
					</div> 
                    <div class="price-wrap mt-2">
						<span class="price">Stock: {{this.stock}}</span>
					</div> 
                    <div class="price-wrap mt-2">
						<span class="price">Category: {{this.category}}</span>
					</div> 
				</div>	
                <form action="/staff/product/delete" method="get">
                <button type="submit" class="btn btn-danger" value="{{this.productID}}">
                    Delete
                  </button>
                  </form>
			</figcaption>
		</figure>
	</div> 
    
{{/each}}