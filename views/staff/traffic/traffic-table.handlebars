 <META http-equiv=refresh>
<!-- Begin Page Content -->
<div class="container-fluid">

<!-- Page Heading -->


<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-sm-9">
                <div class="row">
                    <div class="col-8 col-sm-6">
                    <h1 class="h3 mb-2 text-gray-800">Traffic</h1>
                    <p class="mb-4">Manage Traffic </p>
                    
                    </div>
                    
                </div>
            </div>
            <div class="col-sm-3">
               
            </div>
        </div>
        
        
    </div>
    <div class="card-body">
        <div class="table-responsive">
            
            <div class="wrapper">
                <input type="radio" name="slider" checked id="home">
                <input type="radio" name="slider" id="blog">
                <input type="radio" name="slider" id="code">
                <input type="radio" name="slider" id="help">
                <input type="radio" name="slider" id="add1">
                <nav>
                    <label for="home" class="home"><i class="fa fa-tags" aria-hidden="true"></i></i>All Traffic</label>
                    <label for="blog" class="blog"><i class="fa fa-user-tag"></i>User Traffic</label>
                    
                    <div class="slider"></div>
                </nav>
                <hr>
            
            <!-- Section of Orders & Payment-->
            
            
                <section>
                    <div class="content content-1">
                        <table class="table table-bordered" id="table-1" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Traffic Id</th>
                                    <th>Traffic Path</th>
                                    <th>Visit Count</th>
                                    <th>User Visit Count</th>

                                </tr>
                            </thead>
                
                            <tbody>
                               {{#each Alltraffic}}
                               <tr>
                                    <td>{{this.id}}</td>
                                    <td>{{this.path}}</td>
                                    <td>{{this.pathcount}}</td>
                                    <td>{{this.usercount}}</td>
                               </tr>
                               {{/each}}
                            
                            </tbody>
                        </table>
                    </div>
                </section>
                <section>
                    <div class="content content-2">
                            <table class="table table-bordered" id="table-2" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>User Id</th>
                                    <th>Email</th>
                                    <th>Users Traffic</th>
                                </tr>
                            </thead>
                
                            <tbody>
                                {{#each Users }}
                                <tr>
                                    <td>{{this.id}}</td>
                                    <td>{{this.email}}</td>
                                    <td>
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter{{this.id}}">
                                        All Traffic
                                        </button>

                                        <!-- Modal -->
                                        <div class="modal fade" id="exampleModalCenter{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <table class="table table-bordered" id="table-2" width="100%" cellspacing="0">
                                                    
                                                    <thead>
                                                        <th>Path</th>
                                                        <th>Visit Count</th>
                                                    </thead>
                                                    <tbody>
                                                        {{#each ../Personal_traffic}}
                                                     
                                                            {{#equals this.UserId ../this.id}}
                                                            <tr>
                                                                
                                                                <td>{{this.path}}</td>
                                                                <td>{{this.visitcount}}</td>
                                                            </tr>
                                                            {{/equals}}
                                                        {{/each}}
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                <button type="button" class="btn btn-primary">Save changes</button>
                                            </div>
                                            </div>
                                        </div>
                                        </div>
                                    </td>
                                </tr>
                                {{/each }}
                            
                            </tbody>
                            </table>
                    </div>
                </section>
                <section>
                    <div class="content content-3">
                        <table class="table table-bordered" id="table-3" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Code</th>
                                    <th>Period ( Days )</th>
                                    <th>Voucher Used</th>
                                    <th>Total Voucher</th>
                                    <th>Start Date</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                
                            
                                </tr>
                            </thead>
                
                            <tbody>
                                {{#each voucher }}
                                <tr >
                                    {{#equals this.voucher_type "Master"}}
                                    <td>{{this.voucher_title}}</td>
                                    <td>{{this.voucher_code}}</td>
                                    <td>{{this.days}}</td>
                                    <td>{{this.voucher_used}}</td>
                                    <td>{{this.total_voucher}}</td>
                                    <td>{{this.start_date}}</td>
                                    <td>
                                        {{#equals this.voucher_status "Active"}}
                                        <h5>
                                            <span class="badge badge-success" id="{{this.id}}" >{{this.voucher_status}}</span>
                                        
                                        </h5>
                                        {{/equals}}
                                        {{#equals this.voucher_status "Inactive"}}
                                        <h5>
                                            <span class="badge badge-danger" id="{{this.id}}" >{{this.voucher_status}}</span>
                                            
                                        
                                        </h5>
                                        {{/equals}}
                                    </td>
                                
                                    
                                    
                                    
                                    <td>
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal{{this.id}}">
                                                <i class="fa fa-info" aria-hidden="true"></i>
                                        </button>

                                        <a href="/staff/manage-vouchers/editVoucher/{{id}}" class="btn btn-info"><i class="fa fa-mouse-pointer" aria-hidden="true"></i></a>
                                        
                                        
                                        <!-- Modal -->
                                        <div class="modal fade" id="exampleModal{{this.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content" >
                                                    <div class="modal-body">
                                                        <div class="background-info"></div>
                                                        <div class="card-header-1">
                                                                {{#equals this.voucher_status "Active"}}
                                                                <span class="top-right tag-2 tag-active">Active</span>
                                                            {{/equals}}
                                                            {{#equals this.voucher_status "Inactive"}}
                                                                <span class="top-right tag-2 tag-inactive">Fully Redeemed</span>
                                                            {{/equals}}
                                                            
                                                            <img src="https://c0.wallpaperflare.com/preview/483/210/436/car-green-4x4-jeep.jpg" alt="rover" />
                                                            <span class="voucher-info">
                                                                <h6 style="padding:10px;padding-top:20px;">
                                                                    $10OFF
                                                                    <br >
                                                                    <br>
                                                                        Min. Spend $100
                                                                    <br >
                                                                    <br>
                                                                    <span class="tag">First Purchase Only</span>
                                                                    <br>
                                                                    <br>
                                                                    <p style="color:grey;font-size: 13px;">
                                                                        Valid Till: 31.12.2022
                                                                    </p>
                                                                </h6>
                                                            </span>
                                                            <div class="card-body-1">
                                                            
                                                            <h6 style="padding:10px;padding-top:20px;">
                                                                    <strong>Description</strong> 
                                                                    <br>
                                                                    First come first served. Act fast before voucher is used up!
                                                                    $10 OFF
                                                                    <br >
                                                                    <br>
                                                                    <strong>Valid Time</strong> 
                                                                    <br>
                                                                    20.12.2022 - 31.12.2022 
                                                                    <br >
                                                                    <br>
                                                                        <strong>Product</strong> 
                                                                        <br>
                                                                        Applicable to all products. Except keycaps
                                                                    <br>
                                                                    <br>
                                                                    <strong>More Info</strong> 
                                                                    <br>
                                                                    Applicable to all users. Enjoy $10 OFF with no min spend.
                                                                    Valid from 20.12.2022 - 31.12.2022.
                                                                    Limited Redeemptions only !
                                                                
                                                                </h6>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    {{/equals}}
                                
                                </tr>
                                </tbody>
                                {{/each }}
                            </table>
                    </div>
                </section>
                <section>
                    <div class="content content-4">
                        <table class="table table-bordered" id="table-4" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                
                            <tbody>
                                {{#each voucherlist}}
                                
                                    {{#equals this.User.isStaff "0"}}
                                        <tr >
                                            
                                            <td>{{this.User.username}} 
                                                
                                            </td>
                                            <td>{{this.User.email}}</td>
                                            <td>
                                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal2{{this.id}}">
                                                    Voucher List
                                                </button>
                                                <div class="modal fade" id="exampleModal2{{this.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                                        <div class="modal-content" >
                                                            <div class="modal-body">
                                                                {{#if this.voucheritem}}
                                                                    {{#each this.voucheritem}}
                                                                    
                                                                    Voucher Title: {{this.voucher_title}}
                                                                    <br>
                                                                        Voucher Name: {{this.voucher_name}}
                                                                    <br>
                                                                    {{#each ../../voucheritem}}
                                                                        {{#equals this.VoucherListId ../../this/id }}
                                                                            {{#equals this.VoucherId ../this.id}}
                                                                                    {{!-- {{#equals this.id }} --}}
                                                                                    Usage: {{this.usage}} 
                                                                            {{/equals}}
                                                                        {{/equals}}
                                                                    {{/each}}
                                                                    <hr>
                                                                    {{/each}}
                                                                {{else}}
                                                                <h6>Customer {{this.User.username}} has yet to claim any vouchers</h6>
                                                                {{/if}}
                                                                
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                            
                                            </td>
                                        </tr>
                                    {{/equals}}
                                    
                                {{/each}}
                                
                            </table>
                    </div>
                </section>
            </div>  
        </div>
    </div>
</div>

</div>
