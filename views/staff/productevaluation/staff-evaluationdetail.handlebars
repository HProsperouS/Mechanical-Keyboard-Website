<div class="container-fluid">
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Product Evaluation</h1>
<p class="mb-4">Evaluation Detail</p>

<!-- =================== COMPONENT REVIEW ====================== -->
<div class="row" style="margin:auto;">
	<aside class="col-lg-9">
		<div class="card mb-4" style="height:530px ;">
			<div class="card-body">
				<div class="row">
					<div class="col-10">
						<h4 class="card-title">Reviews  </h4>
					
					</div>
					
					<div class="col-2">
						<p style="color:grey;float:right;"> {{count}} Reviews </p>
					</div>
				</div>
				<hr>
				<br>
				
				<div class="scroll" style="overflow-y:auto;height:450px;">
					{{#each review}}
					<blockquote class="border-bottom">
						
							<div class="row">
								<div class="col-1 d-flex justify-content-center " >
									<img src="/{{this.User.imageFilePath}}" class="img-xs icon rounded-circle" style="width:50px ;height:50px;">
								</div>
								<div class="col-11">
									
										
										<div class="rating-wrap" >
											<div class="rating-stars" style="list-style: none;">
												<div><h6 class="mb-0"> {{this.User.username}} </h6></div>
												<div style="width:{{convert this.ProductRating}}%" class="stars-active">
													<img src="/images/misc/stars-active.svg" alt="" style="z-index:2;">
												</div>
												<p>
													{{this.ProductRemarks}}
													<small class="label-rating text-muted" style="float:right;"> Purchased on  {{dateFormat this.createdAt 'DD MMM YYYY'}}</small>
												</p>
												
												{{!-- <li> <img src="/images/misc/starts-disable.svg" alt=""  style="z-index:1;"> </li> --}}
											</div>
											
											
										</div>
									
								</div>
							
							{{!-- <img src="/uploads/myImage-1660035606378.jpg" class="img-xs icon rounded-circle"> --}}
						</div> <!-- icontext.// -->
						
					</blockquote>
					<br>
					{{/each}}
				</div>
			</div>
		</div>
	</aside>
	
		<aside class="col-lg-3" >
			<article class="card" style="width:100%;height:530px;">
				<div class="card-body">
					
					{{!-- <div class="total-rating">
						<h4 class="text-lg " style="text-align:center;"> 
						4.6 out of 5 
						</h4>	
						<div class="stars" style="text-align: center;">
							<i class="fa-solid fa-star fa-lg"></i>
							<i class="fa-solid fa-star fa-lg"></i>
							<i class="fa-solid fa-star fa-lg"></i>
							<i class="fa-solid fa-star fa-lg"></i>
							<i class="fa-solid fa-star-half fa-lg"></i>
						</div>
					</div> --}}
					
					
					
					<div class="mt-3" style="text-align:center;">
						<b class="label-rating text-lg"> {{average}}  out of 5 </b>	
						{{!-- <ul class="stars-lg" style="list-style: none;"> --}}
						<div style="width:100% " class="stars-active"  style="padding-right:100px;"> <img src="/images/misc/stars-active.svg" alt=""> </div>
							{{!-- {{convert average}} --}}
							{{!-- <li> <img height="520" src="/images/misc/starts-disable.svg" alt=""> </li> --}}
						{{!-- </ul> --}}
							
					</div> <!-- rating-wrap.// -->
					{{!-- <p class="mt-1 text-muted"> {{count}} reviews </p> --}}

					<br>
					
					
					<table class="table table-borderless table-sm">
						<tr valign="middle">
							<td width="50"> 5 <i class="fa-solid fa-star"></i></td>
							<td style="vertical-align:middle ;"> 
								<div class="progress" style="height: 10px;" >
								<div class="progress-bar bg-warning" role="progressbar" style="width: {{percentage count5 count}}%;" aria-valuenow="25" aria-valuemax="100" ></div>
								</div> <!-- progress .// -->
							</td>
							<td width="60"> {{percentage count5 count}} % </td>
						</tr>
						<tr valign="middle">
							<td> 4 <i class="fa-solid fa-star"></i> </td>
							<td style="vertical-align:middle ;"> 
								<div class="progress" style="height: 10px;">
								<div class="progress-bar bg-warning" role="progressbar" style="width: {{percentage count4 count}}%;" aria-valuenow="80" aria-valuemax="100"></div>
								</div> <!-- progress .// -->
							</td>
							<td> {{percentage count4 count}} % </td>
						</tr>
						<tr valign="middle">
							<td> 3 <i class="fa-solid fa-star"></i></td>
							<td style="vertical-align:middle ;"> 
								<div class="progress" style="height: 10px;">
								<div class="progress-bar bg-warning" role="progressbar" style="width: {{percentage count3 count}} %;" aria-valuenow="35" aria-valuemax="100"></div>
								</div> <!-- progress .// -->
							</td>
							<td> {{percentage count3 count}} % </td>
						</tr>
						<tr valign="middle">
							<td> 2 <i class="fa-solid fa-star"></i> </td>
							<td style="vertical-align:middle ;"> 
								<div class="progress" style="height: 10px;">
								<div class="progress-bar bg-warning" role="progressbar" style="width: {{percentage count2 count}}%;" aria-valuenow="13" aria-valuemax="100"></div>
								</div> <!-- progress .// -->
							</td>
							<td> {{percentage count2 count}} % </td>
						</tr>
						<tr valign="middle">
							<td> 1 <i class="fa-solid fa-star"></i> </td>
							<td style="vertical-align:middle ;"> 
								<div class="progress" style="height: 10px;">
								<div class="progress-bar bg-warning" role="progressbar" style="width:{{percentage count1 count}}%;" aria-valuenow="5" aria-valuemax="100"></div>
								</div> <!-- progress .// -->
							</td>
							<td> {{percentage count1 count}} % </td>
						</tr>
					</table>
				</div>
			</article>
		</aside>
</div>

</div>
<style>
	.scroll::-webkit-scrollbar-track{
		background-color: ghostwhite;
		scroll-margin-left: 10px !important;
	}
	.scroll::-webkit-scrollbar {
	width: 12px;  
	/* width of the entire scrollbar */
	}
	.scroll::-webkit-scrollbar-thumb {
  background-color: #F3F3F3;    /* color of the scroll thumb */
  border-radius: 20px;  
  height:40px;     /* roundness of the scroll thumb */
   /* creates padding around scroll thumb */
}
</style>