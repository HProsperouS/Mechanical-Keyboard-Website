<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Order Management</h1>
    <p class="mb-4">Manage Orders</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Order Management</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table
                    class="table table-bordered"
                    id="dataTable"
                    width="100%"
                    cellspacing="0"
                >
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Customer Name</th>
                            <th>Customer Email</th>
                            <th>No of items</th>
                            <th>Status</th>
                            <th>Total Price</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each orders }}
                            <tr>
                                <td>{{this.id}}</td>
                                <td>{{this.User.username}}</td>
                                <td>{{this.User.email}}</td>
                                <td>{{sum_quantity this.OrderItems}}</td>
                                {{#equals this.payment_status 0 }}
                                    <td><p class="badge badge-danger">Unpaid</p></td>
                                {{/equals}}
                                {{#equals this.payment_status 1 }}
                                    <td><p class="badge badge-success">Paid</p></td>
                                {{/equals}}
                                <td>${{this.amount}}</td>
                                <td>{{dateFormat this.createdAt 'DD MMM YYYY'}}</td>
                                <td>
                                    <div class="row">
                                        <div class="col-4">
                                            <form action="/order/cancel/{{this.id}}" method="get">
                                                <!-- delete button -->
                                                <button type="button" title="Delete" class="btn btn-danger " data-toggle="modal" data-target="#deleteModal_{{this.id}}">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>

                                                <!-- The Modal -->
                                                <div class="modal" id="deleteModal_{{ this.id }}">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                            
                                                            <!-- Modal Header -->
                                                            <div class="modal-header">
                                                            <h4 class="modal-title">Cancel Confirmation</h4>
                                                            <button type="button" class="btn-close" data-dismiss="modal"></button>
                                                            </div>
                            
                                                            <!-- Modal body -->
                                                            <div class="modal-body">
                                                            Are you sure you want to delete {{this.id}}?
                                                            </div>
                            
                                                            <!-- Modal footer -->
                                                            <div class="modal-footer">
                                                            <input type="submit" value="Delete" class="btn btn-danger">
                                                            
                                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                        {{!-- https://mdbootstrap.com/docs/standard/extended/order-details/# --}}
                                        <div class="col-4">
                                            <!-- view button -->
                                            <button type="button" title="View" class="btn btn-secondary" data-toggle="modal" data-target="#viewModal_{{this.id}}">
                                                <i class="far fa-eye"></i>
                                            </button>
                                            <!-- The Modal -->
                                            <div class="modal " id="viewModal_{{ this.id }}" >
                                                <div class="modal-dialog">
                                                    {{!-- <div class="modal-header" style="width: 800px; margin-left: -100px">
                                                            <h4 class="modal-title"> Order Details</h4>
                                                            <button type="button" class="btn-close" data-dismiss="modal"></button>
                                                    </div> --}}
                                                    <div class="modal-content" style="width: 800px; margin-left: -100px" >
                                                        
                                                        <div class="card" style="border-radius: 10px;" >
                                                            <div class="card-header px-4 py-5">
                                                                <div class="row">
                                                                <div class="col-11">
                                                                    <h5 class="text-muted mb-0">Order Of  <span style="color: #a8729a;">{{this.User.username}}</span>!</h5>
                                                                </div>
                                                                <div class="col-1">
                                                                    <button type="button" class="btn-close" data-dismiss="modal"></button>
                                                                </div>
                                                                </div>
                                                            </div>
                                                            <div class="card-body p-4">
                                                                <div class="d-flex justify-content-between align-items-center mb-4">
                                                                <p class="lead fw-normal mb-0" style="color: #a8729a;">Details</p>
                                                                <p class="small text-muted mb-0">Order ID : {{this.id}}</p>
                                                                </div>
                                                                {{#each this.OrderItems}}
                                                                    <div class="card shadow-0 border mb-4">
                                                                    <div class="card-body">
                                                                        <div class="row">
                                                                        <div class="col-md-2">
                                                                            <img src="https://mdbcdn.b-cdn.net/img/Photos/Horizontal/E-commerce/Products/13.webp"
                                                                            class="img-fluid" alt="Phone">
                                                                        </div>
                                                                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                                            <p class="text-muted mb-0">{{this.Product.name}}</p>
                                                                        </div>
                                                                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                                            <p class="text-muted mb-0 small">color undifined</p>
                                                                        </div>
                                                                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                                            <p class="text-muted mb-0 small">{{this.Product.category}}</p>
                                                                        </div>
                                                                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                                            <p class="text-muted mb-0 small">Quantity: {{this.quantity}}</p>
                                                                        </div>
                                                                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                                            <p class="text-muted mb-0 small">${{multiply this.quantity this.price}}.00</p>
                                                                        </div>
                                                                        </div>
                                                                        <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                                                                        <div class="row d-flex align-items-center">
                                                                        <div class="col-md-2">
                                                                            <p class="text-muted mb-0 small">Track Order</p>
                                                                        </div>
                                                                        <div class="col-md-10">
                                                                            <div class="progress" style="height: 6px; border-radius: 16px;">
                                                                            <div class="progress-bar" role="progressbar"
                                                                                style="width: 65%; border-radius: 16px; background-color: #a8729a;" aria-valuenow="65"
                                                                                aria-valuemin="0" aria-valuemax="100"></div>
                                                                            </div>
                                                                            <div class="d-flex justify-content-around mb-1">
                                                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivary</p>
                                                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p>
                                                                            </div>
                                                                        </div>
                                                                        </div>
                                                                    </div>
                                                                    </div>
                                                                {{/each}}
                                                                

                                                                <div class="d-flex justify-content-between pt-2">
                                                                <p class="fw-bold mb-0">Order Details</p>
                                                                <p class="text-muted mb-0"><span class="fw-bold me-4">Total</span> {{ this.amount}}</p>
                                                                </div>

                                                                <div class="d-flex justify-content-between pt-2">
                                                                <p class="text-muted mb-0">Invoice Number : 788152</p>
                                                                <p class="text-muted mb-0"><span class="fw-bold me-4">Discount</span> $0.00</p>
                                                                </div>

                                                                <div class="d-flex justify-content-between">
                                                                <p class="text-muted mb-0">Order Date: {{dateFormat createdAt 'DD MMM YYYY'}}</p>
                                                                {{!-- <p class="text-muted mb-0"><span class="fw-bold me-4">GST 18%</span> 123</p> --}}
                                                                </div>

                                                                <div class="d-flex justify-content-between mb-5">
                                                                <p class="text-muted mb-0">Recepits Voucher : 18KU-62IIK</p>
                                                                <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery Charges</span> Free</p>
                                                                </div>
                                                            </div>
                                                            {{#equals this.payment_status 0}}
                                                                <div class="card-footer"
                                                                    style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                                                                    <h6 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
                                                                    paid: &nbsp <span class="badge badge-danger mb-0 ms2"> Unpaid</span></h6> 
                                                                </div>
                                                            {{/equals}}
                                                            {{#equals this.payment_status 1}}
                                                                <div class="card-footer border-0 px-4 py-5"
                                                                    style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                                                                    <h6 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
                                                                    paid: <span class="h2 mb-0 ms-2">{{this.amount}}.00</span></h6>
                                                                </div>
                                                            {{/equals}}

                                                        </div>

                                                        <!-- Modal footer -->
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
