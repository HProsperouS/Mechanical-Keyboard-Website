<div class="container">
	<div class="shadow card card-body ">
		<form action="/staff/manage-vouchers/editVoucher/{{voucher.id}}" method="POST">
		
			<h3 >Update Coupon</h3>
	
			<div class="mb-3">
				<label for="" class="form-label">Voucher Name</label>
				<input type="text" class="form-control" id="voucher_name" name="voucher_name" value="{{voucher.voucher_name}}" required>
			</div>
			 <div class="mb-3">
				<label for="voucher_desc" class="form-label">Voucher Description</label>
				<input type="text" class="form-control" id="voucher_desc" name="voucher_desc" value="{{voucher.voucher_desc}}" required>
			</div>
			<div class="mb-3">
				<label for="voucher_value" class="form-label">Voucher Value</label>
				<input type="number" class="form-control" id="voucher_value" name="voucher_value" value="{{voucher.voucher_value}}" required>
			</div>
			<div class="mb-3">
				<label for="voucher_type">Voucher Type</label>
				<select class="form-control" id="voucher_type" name="voucher_type">
					<option value="Cashback">Cashback</option>
					<option value="Discount">Discount</option>
				</select>
			</div>
						
			<div class="mb-3">
				<label for="coupon_code" class="form-label">Voucher Code</label>
				<input type="text" class="form-control" id="voucher_code" value="{{voucher.voucher_code}}" readonly name="voucher_code" >
			</div>
			<div class="mb-3">
				<input type="hidden" class="form-control" id="voucher_used" name="voucher_used" value="0" required>
			</div>
			<div class="mb-3">
				<label for="total_voucher" class="form-label">Total Voucher</label>
				<input type="number" class="form-control" id="total_voucher" name="total_voucher" value="{{voucher.total_voucher}}" required>
			</div>
			<div class="mb-3" id="timedisplay" >
				<div class="row">
					<div class="col-6">
						<label for="start_date" class="form-label">Start Date</label>
						<input type="text" id="timepicker"  class="" name="start_date" value="{{voucher.start_date}}"/>
					</div>
					<div class="col-6">
						<label for="days" class="form-label">Period ( Days )</label>
						<input type="number" class="form-control" id="days" name="days" value="{{voucher.days}}" required>
					</div>
				</div>
            </div>
			<label for="" class="form-label">Status</label>
			
			<div class=" btn-group-toggle" data-toggle="buttons">
				<label class="btn btn-success col-2" id="status_choice_1" onclick="status_choice_1()" >
					<input type="radio" name="voucher_status" id="coupon_status_1" value="Active" autocomplete="off" checked> Valid
				</label>
				
				<label class="btn col-2" id="status_choice_2" onclick="status_choice_2()" >
					<input type="radio" name="" id="coupon_status_2"  autocomplete="off" value="Non-Active"> Expired
				</label>
			</div>
			<br>
			<div class="row">
				<div class="col-10 ">
					<button type="submit" class="btn btn-primary">Update</button>
				</div>
				
				<button type="button" class="col-2 btn btn-primary"> <a href="/staff/manage-vouchers" style="text-decoration:none; color:white;">Return</a></button>
			</div>
			
		</form>
	</div>
</div>

