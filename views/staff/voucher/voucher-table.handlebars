<!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Vouchers</h1>
                    <p class="mb-4">Manage Vouchers</p>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Vouchers</h6>
                            <div class="text-right">
                                <button type="button" class="btn btn-primary "><a href="/staff/manage-vouchers/voucher-form" style="text-decoration:none; color:white;">Create</a></button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Coupon ID</th>
                                            <th>Name</th>
                                              <th>Status</th>
                                            <th>Action</th>
                                          
                                    
                                        </tr>
                                    </thead>
                                    {{!-- <tfoot>
                                        <tr>
                                        <th>ID</th>
                                            <th>Username</th>
                                            <th>Email</th>
                                                  <th>Permission Level</th>
                                            <th>Action</th>
                                      
                                    
                                        </tr>
                                    </tfoot> --}}
                                    <tbody>
                                        {{#each voucher }}
                                        <tr >
                                            <td>{{this.id}}</td>
                                            <td>{{this.coupon_id}}</td>
                                            <td>{{this.coupon_name}}</td>
                                            
                                            <td>
                                                {{#equals this.coupon_status "Valid"}}
                                                <h5>
                                                    <span class="badge badge-success" id="{{this.id}}" >{{this.coupon_status}}</span>
                                                
                                                </h5>
                                                {{/equals}}
                                                {{#equals this.coupon_status "Expired"}}
                                                <h5>
                                                    <span class="badge badge-danger" id="{{this.id}}" >{{this.coupon_status}}</span>
                                                
                                                </h5>
                                                {{/equals}}
                                            </td>
                                           
                                            
                                            
                                            
                                            <td>
                                                <a href="/staff/manage-vouchers/editVoucher/{{id}}" class="btn btn-info">Edit</a>
                                                <a href="/staff/manage-vouchers/deleteVoucher/{{id}}" class="btn btn-danger">Delete</a>
                                            </td>
                                           
                                        </tr>
                                        {{/each }}
                                     
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

  
            <!-- End of Main Content -->

