<!-- ============== SECTION CONTENT ============== -->

<section class="padding-y">
<div class="container">
<div class="row">
	<aside class="col-lg-6">
	<article class="gallery-wrap"> 
		<div class="img-big-wrap img-thumbnail">
		<a data-fslightbox="mygalley" data-type="image" href=""> 
			<img height="560" src="/{{productdetail.image}}"> 
		</a>
		</div> <!-- img-big-wrap.// -->
	</article> <!-- gallery-wrap .end// -->
	</aside>
	<main class="col-lg-6">
	<article class="ps-lg-3">
		<h4 class="title text-dark"> 
			{{productdetail.name}} 
			
		</h4>
		
		{{!-- <div class="rating-wrap my-3">
		<ul class="rating-stars">
			<li style="width:80%" class="stars-active"> <img src="images/misc/stars-active.svg" alt=""> </li>
			<li> <img src="images/misc/starts-disable.svg" alt=""> </li>
		</ul>
		
		
		</div> <!-- rating-wrap.// --> --}}

		<br>

		<p>{{productdetail.description}} This is a High Fibre Material Reynox Keyboard. Highly durable materials crafted in Japan. Custom design & made in Singapore</p>

		<br>
		<dl class="row">
		<dt class="col-3">Type: </dt>
		<dd class="col-9">{{productdetail.category}}</dd>

		<dt class="col-3">Color</dt>
		<dd class="col-9">{{productdetail.colour}}</dd>

		<dt class="col-3">Brand</dt>
		<dd class="col-9">{{productdetail.brand}} </dd>

		<dt class="col-3">Availability </dt>
		<dd class="col-9">
			{{#notequals productdetail.stock 0}}
			<span class="label-rating text-success" style="font-size:15px;float:left;">In Stock</span>
			{{/notequals}}
			{{#equals productdetail.stock 0}}
				<span class="label-rating text-danger">Out Of Stock</span>
			{{/equals}}
		</dd>
		</dl>

		<hr>

		<div class="row mb-4">
		
		
		</div> <!-- row.// -->
		<div class="row">
			<div class="col-8">
				<div class="mb-3"> 
				<var class="price h4 mb-1 m-1" style="line-height: 10px;">${{productdetail.price}}.00</var> 
				<br>
				<span class="text-muted m-1">* Tax Included *</span> 
				</div> 
			</div>
			<div class="col-4">
				{{#notequals productdetail.stock 0}}
					<form action="/cart/postcart" method="POST">
						<input type="hidden" name="productId" value="{{productdetail.id}}">
						<button type="submit" class="btn  btn-dark" style="float: right;"> <i class="me-1 fa fa-shopping-basket"></i> Add to cart </button>
					</form>
				{{/notequals}}
				{{#equals productdetail.stock 0}}
					<button href="#" class="btn  btn-dark" disabled style="float: right;"> <i class="me-1 fa fa-shopping-basket"></i> Add to cart </button>
				{{/equals}}
			</div>
		</div>
		
		<br>

		{{!-- <a href="#" class="btn  btn-warning"> Buy now </a> --}}
		
		{{!-- <a href="#" class="btn  btn-light"> <i class="me-1 fa fa-heart"></i> Save </a> --}}
	
	</article> <!-- product-info-aside .// -->
	</main> <!-- col.// -->
</div> <!-- row.// -->

<!-- =================== COMPONENT REVIEW ====================== -->
<div class="row" style="">
	<aside class="col-lg-9">
		<div class="card mb-4" style="height:605px ;">
			<div class="card-body">
				<div class="row">
					<div class="col-10">
						<h4 class="card-title" style="padding-top:20px;">Reviews  </h4>
					
					</div>
					
					<div class="col-2">
						<p style="color:grey;float:right;"> {{count}} Reviews </p>
					</div>
				</div>
				<hr>
				<br>
				
				<div class="scroll" style="overflow-y:auto;height:450px;">
					{{#each review}}
					<blockquote class="border-bottom">
						<div class="icontext">
							{{!-- <img src="/uploads/myImage-1660035606378.jpg" class="img-xs icon rounded-circle"> --}}
							<img src="/{{this.User.imageFilePath}}" class="img-xs icon rounded-circle">
							<div class="text">
								<h6 class="mb-0"> {{this.User.username}} </h6>
								<div class="rating-wrap">
									<ul class="rating-stars">
										<li style="width:{{convert this.ProductRating}}%" class="stars-active">
											<img src="/images/misc/stars-active.svg" alt="">
										</li>
										<li> <img src="/images/misc/starts-disable.svg" alt=""> </li>
									</ul>
									<b class="dot"></b>
									<small class="label-rating text-muted"> Purchased on  {{dateFormat this.createdAt 'DD MMM YYYY'}}</small>
								</div>
							</div>
						</div> 
						
						<div class="image-container mt-3" style="width:100px;height:100px;">
							<img src="/{{this.imageFilePath1}}" alt="" class="img-fluid">
						</div>
						<!-- icontext.// -->
						
						<div class="mt-3">
							<p>
								{{this.ProductRemarks}}
							</p>
						</div>
					</blockquote>
					<br>
					{{/each}}
				</div>
			</div>
			</div>
		</aside>
	
		<aside class="col-lg-3" >
			<article class="card" style="width: 300px;">
				<div class="card-body">
					
