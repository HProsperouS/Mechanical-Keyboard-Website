<div class="mt-5">
  <div class="d-flex justify-content-center mb-3">
    <div>
      <span class="step">Step1</span>
      <div class="mt-3 ml-2">Cart</div>
    </div>
    <div class="line"></div>
    <div>
      <span class="step step-now mb-3">Step2</span>
      <div class="mt-3">Fill in information</div>
    </div>
    <div class="line"></div>
    <div>
      <span class="step mb-3">Step3</span>
      <div class="mt-3 mr-3">Submit Order</div>
      <div class="ml-2">&Payment</div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4 m-auto">
    <form action="/order/data" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Enter name" name="name">
      </div>
      <div class="form-group">
        <label for="phone">PhoneNo</label>
        <input type="text" class="form-control" id="phone" placeholder="Enter phone" name="phone">
      </div>
      <div class="form-group">
        <label for="address">Address</label>
        <input type="text" class="form-control" id="address" placeholder="Enter address" name="address">
      </div>
      <input type="hidden" name="cartId" value="{{cartId}}">
      <input type="hidden" name="amount" value="{{amount}}">
      <input type="hidden" name="shipping_status" value="0">
      <input type="hidden" name="payment_status" value="0">
      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-outline-success mt-3">Submit Order</button>
      </div>
    </form>
  </div>
</div>